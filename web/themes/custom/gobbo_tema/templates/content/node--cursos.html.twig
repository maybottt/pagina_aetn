									<a href="{{url('<front>')}}">Inicio</a>
								</li>
								{# <li class="breadcrumb-item">
									<a href="/p-gina-de-notas-de-prensa">Notas
										de prensa</a>
								</li> #}
								<li class="breadcrumb-item active" aria-current="page">
									{{content['field_titulo_curso']['#items'].value}}</li>

							</ol>
						</nav>
					</div>

				</div>
			</div>
		</div>


		<div class="row texto-default">

            <div class='col-12 col-sm-9'>
                <div class="pb-2" style='border: none;'>

                    <div class="card-body pt-0">

                        <h2>{{content['field_titulo_curso']['#items'].value}}</h2>
                        <div>
                            <small>
                                <p class='card-text'> 
									Modalidad
